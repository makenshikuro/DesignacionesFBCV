<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fbcv.ubustus.designacionesfbcv.BuscaDesignacion"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_previsto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Previsto"
        android:textSize="17sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lista_semanal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_semanaX"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/guideline"
        android:layout_marginRight="8dp">

    </TextView>
    <TextView
        android:id="@+id/txt_numPartidos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Partidos"
        android:textSize="17sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/lista_semanal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_semanaX"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toLeftOf="@+id/getBtn"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/guideline">

    </TextView>
    <TextView
        android:id="@+id/txt_semanaX"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Semana -"
        android:textSize="17sp"
        tools:layout_constraintTop_creator="1"

        app:layout_constraintRight_toLeftOf="@+id/getBtn"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />


    <Button
        android:id="@+id/getBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="Get Designacion"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />




    <ListView
        android:id="@+id/lista_semanal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/getBtn"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/getBtn"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="-1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.57">

    </ListView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="130dp"
        android:orientation="vertical" />

</android.support.constraint.ConstraintLayout>
